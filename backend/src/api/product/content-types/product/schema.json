{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "ratings": {
      "type": "integer"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "colors": {
      "type": "json"
    },
    "stockLeft": {
      "type": "integer"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Laptop",
        "SmartPhone",
        "Earphone",
        "Television"
      ],
      "required": true
    }
  }
}
